-- API load

os.loadAPI('api/text')

local w, h = term.getSize()
term.setBackgroundColor(2048)
term.setTextColor(1)
term.clear()

text.cPrint("SkyOS", 2)
text.cWrite("Username: ", 4)
text.cWrite("Password: ", 6)
term.setCursorPos(w/2-10, 4)
local name = read()
term.setCursorPos(w/2-10, 6)
local pass = read('*')