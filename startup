-- API load

os.loadAPI('api/text')

local w, h = term.getSize()
term.setBackgroundColor(2048)
term.setTextColor(1)
term.clear()

text.cPrint("SkyOS", 2)
text.cWrite("Username: ", 4)
text.cWrite("Password: ", 6)
term.setCursorPos(math.floor((w-str.len('Username: '))/2), 4)
local name = read()
term.setCursorPos(math.floor((w-str.len('Password: '))/2), 6)
local pass = read('*')